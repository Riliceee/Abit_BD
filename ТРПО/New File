#include <Windows.h>
using namespace std;

int main()
{
  SetConsoleCP(1251); // Команда для установки кодовой страницы win-cp 1251 в поток ввода
  SetConsoleOutputCP(1251); // команда для установки кодовой страницы 1251 в поток вывода
  setlocale(LC_ALL , "rus");

	char a, c;
	while (a = '0')
	{
		cout << "Нажмите 'r' для отображения данных." << endl;
		cout << "Нажмите 'w' для записи данных в файл." << endl;
		cin >> c;
		switch (c)
		{
		
		case 'r':
		{
			string b;
			ifstream Table("table.txt");
			getline(Table, b);
			cout << b << endl;
			while (!Table.eof())

			{
				getline(Table, b);
				cout << b << endl;
			}
			Table.close();
			cout << endl << "Нажмите 'e' для закрытия программы." << endl;
			break;
		}

		case 'w':
		{
			string f;
			ofstream d("table.txt", ios_base::app);
			cout << "Введите Фамилию, Имя и Отчество:" << endl;
			cin >> f;
			d <<"Фамилия, Имя и Отчество:" << f;
			cout << "Введите Имя и Отчество:";
			cin >> f;
			d << " " << f ;
			system("cls");
			cout << "Введите Отчество:";
			cin >> f;
			d << " " << f << endl;
			system("cls");
			cout << "Введите рост:" << endl;
			cin >> f;
			d << "Рост:" << f << endl;
			system("cls");
			cout << "Введите вес:" << endl;
			cin >> f;
			d << "Вес:" << f << endl << endl;
			d.close();
			system("cls");
			cout <<endl<< "Нажмите 'e' для закрытия программы." << endl;
			break;
		}

		case 'e':
		{system("pause");
		return 0;
		break;
		}
		}
	}

}



